{
    "name": "Constraints_Birds",
    "n_gpu": 1,

    "reg_method": "none",
    "reg_norm": "none",
    "reg_extractor": 1,
    "reg_predictor": 1,
    "scale_factor": 1,

    "arch": {
        "type": "ResNet101",
        "args": {
            "n_classes": 200
        }
    },
    "data_loader": {
        "type": "BirdsDataLoader",
        "args":{
            "data_dir": "data/CUB_200_2011/",
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 30,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 30
    }
}
